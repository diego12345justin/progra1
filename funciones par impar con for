#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
bool num_par (int a);
void main()
{ 
	bool z;
	int numero,n;
	cout<<"ingrese el numero de vecesque quieres repetir:";
	cin>>n;
	for (int i=1;i<n;i++){
		cout<< " ingrese un numero:";
		cin>>numero;
		z=num_par(numero);
		if (z)
			cout <<"es par:";
		else 
			cout<<"es impar:";}
	getch ();
}

bool num_par(int a)
{if (a%2==0)
return true;
else 
	return false;
}
